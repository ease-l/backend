﻿@{
    ViewBag.Title = "Home Page";
}
@model WebApp.ViewModels.MongoDBViewModels
<h3>Выберите файлик для загрузки</h3>
@using (Html.BeginForm("Download", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="uploadImage" /><br>
    <input type="submit" value="Загрузить" />
}
<ul>
    <li>
        @Html.ActionLink("Download", "Download", "Image")
        <p>Загрузить картинку для получения ссылки(Post)</p>
